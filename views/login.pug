doctype html
html(lang="en")
	head
		meta(charset="UTF-8")
		meta(http-equiv="X-UA-Compatible", content="IE=edge")
		meta(name="viewport", content="width=device-width, initial-scale=1.0")
		link(rel="stylesheet", href="register.css")
		title Log In Page
	body 
	main.container
		h1.title Log In
		form(action="/login" method='POST').form
			div
				input(type="text" placeholder='Username' name='username' ).inp-username
			div
				input(type="password", placeholder='Password' name="password").inp-password
			button(type='submit').btn-submit Login